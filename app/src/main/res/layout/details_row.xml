<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp" >



    <CheckBox
        android:id="@+id/cb_pod_delais_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_details_pod"
        android:layout_marginTop="9dp"
        android:text="@string/vertical"
        android:textColor="@color/textColor"
        android:textSize="25dp" />

    <SeekBar
        android:id="@+id/sb_pod_details_vertical"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cb_pod_delais_vertical"
        android:max="100"
        android:min="1"
        android:progress="0" />

</RelativeLayout>