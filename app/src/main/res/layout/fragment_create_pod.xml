<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.hes.santour.CreatePodFragment">

    <EditText
        android:id="@+id/et_pod"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:text="@string/pod_name"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/textTitle"/>

    <ImageView
        android:id="@+id/iv_pod_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_pod"
        android:background="@color/img"
        android:gravity="bottom"
        android:src="@drawable/ic_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_pod_img"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/pod_linearLayout1">

        <ImageButton
            android:id="@+id/ib_pod_delete_picture"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_pod_img"
            android:layout_weight="1"
            android:background="@color/red"
            android:src="@drawable/ic_trash" />

        <ImageButton
            android:id="@+id/ib_pod_take_picture"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_pod_img"
            android:layout_weight="1"
            android:background="@color/green"
            android:src="@drawable/ic_photo_camera" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_pod_gps_data_longitude"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_pod_gps_data_latitude"
        android:layout_alignBottom="@+id/tv_pod_gps_data_latitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/border"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="@string/longi"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_pod_gps_data_latitude"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pod_linearLayout1"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/border"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="@string/lati"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/et_pod_description"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_pod_gps_data_longitude"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:ems="30"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:text="@string/description"
        android:textColor="@color/textColor"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bt_pod_cancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/et_pod_description"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/et_pod_description"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:background="@color/red"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bt_pod_next"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bt_pod_cancel"
        android:layout_alignBottom="@+id/bt_pod_cancel"
        android:layout_alignEnd="@+id/et_pod_description"
        android:layout_alignRight="@+id/et_pod_description"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/green"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>
